
@model IEnumerable<APi.Model.Customer>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<a class="btn btn-outline-primary" asp-action="AddCustomer">AddCustomer</a>

<table class="table align-content-center border-start btn-outline-danger accordion-header">
    <thead class="alert-primary">
    <tr >
       <th>Id</th>
       <th>Name</th>
       <th>Gender</th>
       <th>IsActive</th>
       <th>Action</th>
    </tr>
    </thead>
    @if (Model.Count() > 0)
    {


        @foreach (var item in Model)
        {
            <tr>
            <td>@item.Id </td>
            <td>@item.Name</td>
            <td>@item.Gender</td>
            <td>@item.IsActive</td>

            <td>
                    <a class="btn  btn-primary" asp-controller="Testing" asp-action="Edit" asp-route-id="@item.Id">Edit</a>&nbsp;
                    <a class="btn  btn-danger table-hover" onclick="return confirm('Are you Sure , You want to Delete');" asp-controller="Testing" asp-action="Delete" asp-route-id="@item.Id">Delete</a>&nbsp;

            </td>
            </tr>
        }

    }
</table>

